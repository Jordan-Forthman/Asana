<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.Views.ProjectCreationView"
             Title="ProjectCreationView"
             NavigatedFrom="ContentPage_NavigatedFrom"
             NavigatedTo="ContentPage_NavigatedTo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Project Details Section -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Id: " Grid.Column="0" VerticalOptions="Center"/>
                <Entry Text="{Binding Model.Id}" Grid.Column="1" IsReadOnly="True"/>
                <Label Text="Name: " Grid.Column="2" VerticalOptions="Center"/>
                <Entry Text="{Binding Model.Name}" Grid.Column="3"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Description: " Grid.Column="0" VerticalOptions="Center"/>
                <Entry Text="{Binding Model.Description}" Grid.Column="1"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Complete Percent: " Grid.Column="0" VerticalOptions="Center"/>
                <Entry Text="{Binding Model.CompletePercent}" Grid.Column="1" Keyboard="Numeric"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>