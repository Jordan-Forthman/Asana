<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.Views.ProjectManView"
             Title="ProjectManView"
             NavigatedFrom="ContentPage_NavigatedFrom"
             NavigatedTo="ContentPage_NavigatedTo">

    <!-- UX for the project management page -->
    
    <VerticalStackLayout>
        <Grid>
            <ListView
                ItemsSource="{Binding Projects}"
                SelectedItem="{Binding SelectedProject}"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="10*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Model.Id}"/>
                                <Label FontAttributes="Bold" TextColor="Green" Grid.Column="1" Text="{Binding Model.Name}"/>
                                <Button Grid.Column="2" Text="Delete" Clicked="InLineDeleteProjectClicked" Command="{Binding DeleteCommand}"/>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Button Text="Add Project" Clicked="AddClicked"/>
        <Button Text="Edit Project" Clicked="EditClicked"/>
        <Button Text="Delete Project" Clicked="DeleteClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>